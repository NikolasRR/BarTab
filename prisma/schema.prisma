// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  tables Table[]
  participants Participant[]

  @@map("users")
}

model Table {
  id Int @id @default(autoincrement())
  name String
  user User @relation(fields: [userId], references: [id])
  userId Int
  tableParticipant TableParticipant[]
  tableItem TableItem[]

  @@map("tables")
}

model Participant {
  id Int @id @default(autoincrement())
  name String @unique
  user User @relation(fields: [handlerId], references: [id])
  handlerId Int
  tableParticipant TableParticipant[]
  participantItem ParticipantItem[]

  @@map("participants")
}

model Item {
  id Int @id @default(autoincrement())
  name String
  value Int
  participantItem ParticipantItem[]
  tableItem TableItem[]

  @@map("items")
}

model TableParticipant {
  id Int @id @default(autoincrement())
  participant Participant @relation(fields: [participantId], references: [id])
  participantId Int
  table Table @relation(fields: [tableId], references: [id])
  tableId Int

  @@unique([participantId, tableId])
  @@map("tableParticipants")
}

model ParticipantItem {
  id Int @id @default(autoincrement())
  participant Participant @relation(fields: [participantId], references: [id])
  participantId Int
  item Item @relation(fields: [itemId], references: [id])
  itemId Int

  @@map("participantItems")
}

model TableItem {
  id Int @id @default(autoincrement())
  table Table @relation(fields: [tableId], references: [id])
  tableId Int
  item Item @relation(fields: [itemId], references: [id])
  itemId Int

  @@map("tableItems")
}